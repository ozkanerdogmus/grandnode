@model IList<ProductOverviewModel>
@if (Model.Any())
{
    <div class="col-lg-10 mx-auto related-products-grid product-grid px-0 mt-3">
        <h2 class="h3 generalTitle text-center">@T("Products.RelatedProducts")</h2>
            <div class="row-product">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-6 product-container mb-3">
                        <partial name="_ProductBox" model="item" />
                    </div>
                }
            </div>               
    </div>
}
