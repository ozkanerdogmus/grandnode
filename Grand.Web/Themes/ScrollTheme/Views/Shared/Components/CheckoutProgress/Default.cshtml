@model CheckoutProgressModel
<div class="row order-progress mb-2 mt-4 d-none d-md-flex px-3">
    @await Component.InvokeAsync("Widget", new { widgetZone = "checkout_progress_before" })
    <div class="col-12 col-md-4 col-lg-2 mb-1 active-step">
        <a @(Model.CheckoutProgressStep != CheckoutProgressStep.Complete ? @Html.Raw(string.Format(" href=\"{0}\" class=\"btn btn-block btn-info step p-3 col-sm-12\"", Url.RouteUrl("ShoppingCart"))) : @Html.Raw(string.Format("ddddd class=\"btn btn-block btn-info p-3 col-sm-12 step disabled\"")))>
            <span class="lnr linearicons-cart-full" aria-hidden="true"></span>
            <span class="ml-2 d-xl-block d-none">1. @T("Checkout.Progress.Cart")</span>
        </a>
    </div>
    <div @(Model.CheckoutProgressStep == CheckoutProgressStep.Address || Model.CheckoutProgressStep == CheckoutProgressStep.Shipping || Model.CheckoutProgressStep == CheckoutProgressStep.Payment || Model.CheckoutProgressStep == CheckoutProgressStep.Confirm || Model.CheckoutProgressStep == CheckoutProgressStep.Complete ? @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 active-step\"") : @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 inactive-step\""))>
        <a @(Model.CheckoutProgressStep != CheckoutProgressStep.Cart && Model.CheckoutProgressStep != CheckoutProgressStep.Complete ? @Html.Raw(string.Format(" href=\"{0}\" class=\"col-sm-12 btn btn-block btn-secondary step p-3\"", Url.RouteUrl("CheckoutBillingAddress"))) : @Html.Raw(string.Format(" class=\"col-sm-12 btn btn-block btn-secondary step p-3 disabled\"")))>
            <span class="lnr linearicons-clipboard-user" aria-hidden="true"></span>
            <span class="ml-2 d-xl-block d-none">2. @T("Checkout.Progress.Address")</span>
        </a>
    </div>
    <div @(Model.CheckoutProgressStep == CheckoutProgressStep.Shipping || Model.CheckoutProgressStep == CheckoutProgressStep.Payment || Model.CheckoutProgressStep == CheckoutProgressStep.Confirm || Model.CheckoutProgressStep == CheckoutProgressStep.Complete ? @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 active-step\"") : @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 inactive-step\""))>
        <a @(Model.CheckoutProgressStep != CheckoutProgressStep.Cart && Model.CheckoutProgressStep != CheckoutProgressStep.Address && Model.CheckoutProgressStep != CheckoutProgressStep.Complete ? @Html.Raw(string.Format(" href=\"{0}\" class=\"col-sm-12 btn btn-block btn-secondary step p-3\"", Url.RouteUrl("CheckoutShippingMethod"))) : @Html.Raw(string.Format(" class=\"col-sm-12 btn btn-block btn-secondary step p-3 disabled\"")))>
            <span class="lnr linearicons-ship" aria-hidden="true"></span>
            <span class="ml-2 d-xl-block d-none">3. @T("Checkout.Progress.Shipping")</span>
        </a>
    </div>
    <div @(Model.CheckoutProgressStep == CheckoutProgressStep.Payment || Model.CheckoutProgressStep == CheckoutProgressStep.Confirm || Model.CheckoutProgressStep == CheckoutProgressStep.Complete ? @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 active-step\"") : @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 inactive-step\""))>
        <a @(Model.CheckoutProgressStep != CheckoutProgressStep.Cart && Model.CheckoutProgressStep != CheckoutProgressStep.Address && Model.CheckoutProgressStep != CheckoutProgressStep.Shipping && Model.CheckoutProgressStep != CheckoutProgressStep.Complete ? @Html.Raw(string.Format(" href=\"{0}\" class=\"col-sm-12 btn btn-block btn-secondary step p-3\"", Url.RouteUrl("CheckoutPaymentMethod"))) : @Html.Raw(string.Format(" class=\"col-sm-12 btn btn-block btn-secondary step p-3 disabled\"")))>
            <span class="lnr linearicons-bag-dollar" aria-hidden="true"></span>
            <span class="ml-2 d-xl-block d-none">4. @T("Checkout.Progress.Payment")</span>
        </a>
    </div>
    <div @(Model.CheckoutProgressStep == CheckoutProgressStep.Confirm || Model.CheckoutProgressStep == CheckoutProgressStep.Complete ? @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 active-step\"") : @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 inactive-step\""))>
        <a @(Model.CheckoutProgressStep != CheckoutProgressStep.Cart && Model.CheckoutProgressStep != CheckoutProgressStep.Address && Model.CheckoutProgressStep != CheckoutProgressStep.Shipping && Model.CheckoutProgressStep != CheckoutProgressStep.Payment && Model.CheckoutProgressStep != CheckoutProgressStep.Complete ? @Html.Raw(string.Format(" href=\"{0}\" class=\"col-sm-12 btn btn-block btn-secondary step p-3\" ", Url.RouteUrl("CheckoutConfirm"))) : @Html.Raw(string.Format(" class=\"col-sm-12 btn btn-block btn-secondary step p-3 disabled\"")))>
            <span class="lnr linearicons-check" aria-hidden="true"></span>
            <span class="ml-2 d-xl-block d-none">5. @T("Checkout.Progress.Confirm")</span>
        </a>
    </div>
    <div @(Model.CheckoutProgressStep == CheckoutProgressStep.Complete ? @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 active-step\"") : @Html.Raw(" class=\"col-12 col-md-4 col-lg-2 mb-1 inactive-step\""))>
        <a @(Model.CheckoutProgressStep != CheckoutProgressStep.Cart && Model.CheckoutProgressStep != CheckoutProgressStep.Address && Model.CheckoutProgressStep != CheckoutProgressStep.Shipping && Model.CheckoutProgressStep != CheckoutProgressStep.Payment && Model.CheckoutProgressStep != CheckoutProgressStep.Complete ? @Html.Raw(string.Format(" href=\"{0}\" class=\"col-sm-12 btn btn-block btn-secondary step last-step p-3\"", Url.RouteUrl("CheckoutConfirm"))) : @Html.Raw(string.Format(" class=\"col-sm-12 btn btn-block btn-secondary last-step step p-3 disabled\"")))>
            <span class="lnr linearicons-thumbs-up" aria-hidden="true"></span>
            <span class="ml-2 d-xl-block d-none">6. @T("Checkout.Progress.Complete")</span>
        </a>
    </div>
    @await Component.InvokeAsync("Widget", new { widgetZone = "checkout_progress_after" })
</div>